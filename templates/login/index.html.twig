{% extends 'base.html.twig' %}


{% block body %}

    <div class="container" style="margin-top: 180px;max-width: 800px;">
        <h1>Please enter your credentials to login</h1>
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <form action="{{ path('app_login') }}" method="post">
            <label for="username">Username</label>
            <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}">

            <label for="password">Password</label>
            <input type="password" id="password" name="_password" class="form-control" >

            <input type="hidden" name="_target_path" value="/profile">

            <button type="submit" name="login" class="btn btn-primary" style="margin-bottom: 100px" >Login</button>
        </form>
    </div>

{% endblock %}


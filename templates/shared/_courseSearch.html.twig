<!-- Centered Course Search -->
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="course_search">
            <form action="{{ path('app_courses_index') }}" method="GET"
                  class="course_search_form d-flex flex-md-row flex-column align-items-start justify-content-between">
                <div class="col-md-8">
                    <input type="text" class="course_input" placeholder="Course" required="required" name="name">
                </div>
                <div class="col-md-4">
                    <button type="submit" class="course_button"><span>Search Course</span></button>
                </div>
            </form>
        </div>
    </div>
</div>
